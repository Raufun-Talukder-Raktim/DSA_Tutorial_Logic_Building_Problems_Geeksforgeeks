// Odd even number calculation checking. 
#include <stdio.h>

void check_odd_even(int n){
    if(n<0){
        if (n%2 == 1) {
            printf("This is odd negative number");
        }
        else {
            printf("This is even negative number");
        }
        return;
    }
    else if(n==0){
        printf("This number is Zero");
        return;
    }
    else if (n%2== 1) {
        printf("This is odd  number");
        return;
    }
    else {
        printf("This is even number");
        return;
    }
    return;
}

int main() {
    int n;
    scanf("%d",&n);
    check_odd_even(n);
    return 0;
}
